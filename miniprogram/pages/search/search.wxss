/* 搜索按钮样式 */
.search {
  /* flex系列属性可以解决图标和文字居中对齐问题 */
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 60rpx;
  margin: 0 20rpx 20rpx 20rpx;
  border-radius: 10rpx;
  background-color: #212121;
  font-size: 32rpx;
  color: #ccc;
}
.search icon {
  margin-left: 26rpx;
}
.search input {
  margin-left: 10rpx;
}

/* 热门搜索样式 and 历史搜索样式*/
.key-container {
  /* margin:30rpx 0; */
  /* 尽量用padding，不要用margin */
  padding:30rpx 0;
}

.key-title {
  color: #ccc;
  opacity: 0.7;
  padding: 0 30rpx;
}

.key-content {
  margin-top:30rpx ;
  display: flex;
  /* 设置换行 */
  flex-wrap: wrap;
  justify-content: flex-start;
}

.key-item {
  height: 60rpx;
  background-color: #212121;
  line-height: 60rpx;
  text-align: center;
  margin-left: 20rpx;
  margin-bottom: 30rpx;
  padding: 0 12rpx;
  border-radius: 10rpx;
}


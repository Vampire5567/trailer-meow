/* 头像区域 */
.avatar-container {
  position: relative;
  height: 400rpx;
  width: 750rpx;
}

.avatar-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: #1c6ca0;
}
.avatar-skin {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  z-index: 999;
  /* 注意background相关属性的设置顺序 */
  background: no-repeat center center;
  /* 设置背景颜色为透明 */
  /* 默认情况下只要不设置背景颜色（或者背景图片），背景就是透明的。一般是不用的。 */
  /* background-color: transparent; */
  background-image: url("data:image/png;base64,");
  background-size: cover;
  background-color: rbga(0, 0, 0, 0.3);
}
.avatar-wrapper {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.avatar-wrapper image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 30rpx;
}
.avatar-wrapper text {
  color: #fff;
  font-size: 30rpx;
  font-weight: 700;
}
.avatar-wrapper button {
  color: #fff;
  font-size: 30rpx;
  font-weight: 700;
  background-color: transparent;
}
.other-container {
  padding: 0 40rpx;
}
.history-container,.collection-container {
  border-bottom: 4rpx solid #333;
}
.title {
  display: block;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  font-weight: 600;
}
.history-wrapper,.collection-wrapper {
    display: flex;
    margin-bottom: 30rpx;
    width: 100%;
    overflow-x: scroll;
    overflow-y: hidden;
}
.history-item,.collection-item {
  width: 250rpx;
  height: auto;
  margin-right: 15rpx;
}
.history-item image,.collection-item image {
  width: 250rpx;
  height: 150rpx;
}
.history-item text,.collection-item text {
  display: block;
  text-align: center;
  color: #ccc;
  margin-top: 10rpx;
}
.tip_nodata {
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.tip_nodata text {
  color: #ccc;
} 
.set-container {
  height: 120rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 4rpx solid #333;
}
.set-container image {
  height: 32rpx;
  width: 32rpx;
}